<%= provide :title, t(".title") %>
<% provide :button_text, t(".edit_user") %>
<div class="center jumbotron">
  <h1><%= t ".title" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render "form" %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <li><%= link_to t(".change"), Settings.user.gravatar_email, target: :_blank %></li>
      </div>
    </div>
  </div>
</div>
